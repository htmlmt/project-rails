<%= form_for @klass %>
<p>
	<!-- name of class -->
	<%= f.label :name, "Name of class" %>
	<%= f.text_field :name %>
</p>

<p>
	<!-- name of teacher -->
	<% @teachers.each do |i|%>
		<% f.label :teacher_id, "Select teacher" %>
		<% f.select :teacher_id [[i.teacher_id, i.id]]%>
	<% end %>
</p>

<p>
	<!-- term of semester -->
	<%= f.label :term, "Select term" %>
	<%= f.select :term [['Spring', 'Spring'], ['Fall', 'Fall']] %>
</p>

<p>
	<!-- year of semester -->
	<%= f.label :year, "Select year" %>
	<%= f.label :year [[2014, 2014],[2013, 2013],[2012, 2012]] %>
</p>
<% end %>

